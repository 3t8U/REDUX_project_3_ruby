<h1>Update "<%=@project.title() %>"</h1>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input type="hidden" name="id" value="<%= @project.id() %>" />
  <label for="name">Edit Project</label>
  <input id="name" name="title" type="text" value="<%= @project.title() %>">
  <label for="volunteer_name">Add volunteer</label>
  <input id="volunteer_name" name="volunteer_name" type="text" value="<%= @project.volunteers.name %>">
  <button type="submit">Update</button>
</form>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Project</button>
</form>
<p><a href="/projects">Return to project list</a></p>
