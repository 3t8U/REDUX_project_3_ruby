<h1>¡VØLUNTEER!</h1>
<h3>Name: <%= @volunteer.name %></h3>
<h3>Works:</h3>
<% project = @volunteer.project %>
<% if project %>
  <a href="/projects/<%= project.id %>"><h3><%= project.title %></h3></a>
<% else %>
  <p>Appearently, there is no need for any volunteers.........</p>
<% end %>


<form action="/volunteers/<%= @volunteer.id %>/edit" method="get">
  <button type="submit" class="btn">Edit Volunteer</button>
</form>
<p><a href="/volunteers">Return to Volunteers list</a></p>
