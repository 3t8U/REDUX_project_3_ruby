<h3>Name: <%= @volunteer.name %></h3>
<h3>Projects:</h3>

<div class="form-group">
<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value ="patch">
  <label for="name">Edit volunteer for "<%= @project.title %>"</label>
  <input id="name" name="name" class="form-control" type="text">
<button type="submit" class="btn">Edit Volunteer</button>
</form>

<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value ="delete">
  <button type="submit" class="btn">Delete Volunteer</button>
 </form>













<form action="/volunteers/<%= @volunteer.id %>/edit" method="get">
  <button type="submit" class="btn">Edit Volunteer</button>
</form>
